{
  "ts-node": {
		"files": true
	},
	"files": [
		"src/server.ts",
		"src/types/helmet.d.ts",
		"src/types/environment.d.ts"
  ],
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./src/types"
		]
	}
}
